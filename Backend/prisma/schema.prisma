datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                   Int                  @id @default(autoincrement())
  name                 String
  email                String               @unique
  password             String
  role                 Role                 @default(USER)
  phone                String?
  latitude             Float? // last known latitude
  longitude            Float? // last known longitude  
  profileImg           String?
  verified             Boolean              @default(false)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  emergencies          Emergency[]
  responderEmergencies ResponderEmergency[]
}

model Emergency {
  id            Int                  @id @default(autoincrement())
  user          User                 @relation(fields: [userId], references: [id])
  userId        Int
  description   String
  category      EmergencyCategory
  status        EmergencyStatus      @default(PENDING)
  responders    ResponderEmergency[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  latitude      Float
  longitude     Float
  address       String? // optional human-readable address
  notifications Notification[]
}

model ResponderEmergency {
  id          Int       @id @default(autoincrement())
  emergency   Emergency @relation(fields: [emergencyId], references: [id])
  emergencyId Int
  responder   User      @relation(fields: [responderId], references: [id])
  responderId Int
  accepted    Boolean   @default(false)
  respondedAt DateTime?
}

model FirstAid {
  id        Int      @id @default(autoincrement())
  title     String
  category  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id          Int                   @id @default(autoincrement())
  emergency   Emergency             @relation(fields: [emergencyId], references: [id])
  emergencyId Int
  recipientId Int? // user id (responder or admin) â€“ nullable for broadcast
  channel     Channel // primary intent or last channel used
  status      NotifStatus           @default(PENDING)
  priority    Int                   @default(0)
  meta        Json?
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt
  attempts    NotificationAttempt[]
}

model NotificationAttempt {
  id             Int          @id @default(autoincrement())
  notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId Int
  channel        Channel
  success        Boolean
  response       String?
  errorMessage   String?
  triedAt        DateTime     @default(now())
}

enum Channel {
  EMAIL
  TERMII_SMS
  TWILIO_SMS
  WHATSAPP
  FCM_PUSH
}

enum NotifStatus {
  PENDING
  SENT
  FAILED
}

enum Role {
  USER
  RESPONDER
}

enum EmergencyStatus {
  PENDING
  ACCEPTED
  COMPLETED
  CANCELLED
}

enum EmergencyCategory {
  CPR
  BLEEDING
  BURNS
  SEIZURE
  CHOKING
  ASTHMA
  OTHER
}
