// Prisma schema - production-ready

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                   Int                  @id @default(autoincrement())
  name                 String
  email                String               @unique
  password             String               // hashed!
  role                 Role                 @default(USER)
  phone                String?
  locationType         Location             @default(URBAN)
  latitude             Float?               // last known latitude
  longitude            Float?               // last known longitude
  available            Boolean              @default(true) // for responders
  profileImg           String?
  verified             Boolean              @default(false)
  createdAt            DateTime             @default(now())
  updatedAt            DateTime             @updatedAt
  deletedAt            DateTime?            // optional soft delete

  emergencies          Emergency[]
  responderEmergencies ResponderEmergency[]

  @@index([latitude, longitude])
}

model Emergency {
  id            Int                  @id @default(autoincrement())
  user          User                 @relation(fields: [userId], references: [id])
  userId        Int
  description   String
  category      EmergencyCategory
  status        EmergencyStatus      @default(PENDING)
  responders    ResponderEmergency[]
  latitude      Float
  longitude     Float
  address       String?
  notifications Notification[]
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  deletedAt     DateTime?

  @@index([status, createdAt])
}

model ResponderEmergency {
  id          Int       @id @default(autoincrement())
  emergency   Emergency @relation(fields: [emergencyId], references: [id])
  emergencyId Int
  responder   User      @relation(fields: [responderId], references: [id])
  responderId Int
  accepted    Boolean   @default(false)
  respondedAt DateTime?

  @@unique([emergencyId, responderId])
}

model FirstAid {
  id        Int      @id @default(autoincrement())
  title     String
  category  String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Notification {
  id          Int                   @id @default(autoincrement())
  emergency   Emergency             @relation(fields: [emergencyId], references: [id])
  emergencyId Int
  recipientId Int?                  // user id (responder or admin) â€“ nullable for broadcast
  channel     Channel
  status      NotifStatus           @default(PENDING)
  priority    Int                   @default(0)
  meta        Json?
  attempts    NotificationAttempt[]
  createdAt   DateTime              @default(now())
  updatedAt   DateTime              @updatedAt

  @@index([status, priority])
}

model NotificationAttempt {
  id             Int          @id @default(autoincrement())
  notification   Notification @relation(fields: [notificationId], references: [id])
  notificationId Int
  channel        Channel
  success        Boolean
  response       String?
  errorMessage   String?
  triedAt        DateTime     @default(now())
}

enum Channel {
  EMAIL
  TERMII_SMS
  TWILIO_SMS
  WHATSAPP
  FCM_PUSH
}

enum Location {
  URBAN
  SEMI_URBAN
  RURAL
}

enum NotifStatus {
  PENDING
  SENT
  FAILED
}

enum Role {
  USER
  RESPONDER
}

enum EmergencyStatus {
  PENDING
  ACCEPTED
  COMPLETED
  CANCELLED
}

enum EmergencyCategory {
  CPR
  BLEEDING
  BURNS
  SEIZURE
  CHOKING
  ASTHMA
  OTHER
}
