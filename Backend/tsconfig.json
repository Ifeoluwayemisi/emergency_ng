{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "isolatedModules": false,

    "sourceMap": true
  },
  "include": ["src", "tsconfig.json"],
  "exclude": ["node_modules", "dist"]
}
